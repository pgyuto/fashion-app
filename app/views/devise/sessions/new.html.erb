<div class="login-page"> 
  <div class="login-form">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <h1 class="login-text">ログイン</h1>

      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <div class="form-floating email-form ">
        <%= f.email_field :email, class:"form-control ", id:"floatingInput", placeholder:"name@example.com",autofocus: true%>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class:"form-control", id:"floatingPassword", placeholder:"Password" %>
        <label for="floatingPassword">Password</label>
      </div>
      <%= f.submit "ログイン", class:"w-100 btn btn-lg btn-outline-dark login-btn" %>
    <% end %>
    <%= link_to '戻る', pages_path, class:"w-100 btn btn-lg btn-outline-dark" %>
  </div>
</div>
