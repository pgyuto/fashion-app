<body class="text-center"> 
  <main class="form-signin">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <h1 class="h3 mb-3 fw-normal">ログイン</h1>

      <div class='login-flash-message mb-3'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <div class="form-floating">
        <%= f.email_field :email, class:"form-control mb-4", id:"floatingInput", placeholder:"name@example.com",autofocus: true%>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class:"form-control mb-5", id:"floatingPassword", placeholder:"Password" %>
        <label for="floatingPassword">Password</label>
      </div>
      <%= f.submit "ログイン", class:"w-100 btn btn-lg btn-primary mb-3 mt-3" %>
    <% end %>
    <%= link_to '戻る', pages_path, class:"w-100 btn btn-lg btn-primary" %>
  </main>
</body>
