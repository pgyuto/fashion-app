<div class="login-page"> 
  <div class="login-form">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <h1 class="login-text">ユーザー情報入力</h1>

      <%= render 'shared/error_messages', model: f.object %>
      
      <div class="email-form">
        <label for="exampleFormControlInput1" class="form-label">Nickname</label>
        <%= f.text_field :nickname, class:"form-control",id:"exampleFormControlInput1", placeholder:"Nickname",maxlength:"40",autofocus: true %>
      </div> 
      <div class="email-form">
        <label for="exampleFormControlInput2" class="form-label">Email address</label>
        <%= f.email_field :email, class:"form-control", id:"exampleFormControlInput2", placeholder:"name@example.com"%>
      </div>
      <div class="email-form">
        <label for="exampleFormControlInput3" class="form-label">Password <br>※英字と数字の両方を含めて設定してください</label>
        <%= f.password_field :password, class:"form-control", id:"exampleFormControlInput3", placeholder:"Password(6文字以上の半角英数字)" %>
      </div>
      <div class="email-form">
        <label for="exampleFormControlInput4" class="form-label">Password confirmation</label>
        <%= f.password_field :password_confirmation, class:"form-control", id:"exampleFormControlInput4", placeholder:"同じパスワードを入力してください" %>
      </div>
      <%= f.submit "会員登録" ,class:"w-100 btn btn-lg btn-outline-dark login-btn" %>
    <% end %>
    <%= link_to '戻る', pages_path, class:"w-100 btn btn-lg btn-outline-dark" %>
  </div>
</div>
