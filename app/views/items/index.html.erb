<div class="top-page">
  <%= render "shared/header" %>
  <%= render "shared/search_box" %>

  <div class="item-list">
    <%= render 'shared/item_list', items: @items %>
  </div>

  <%= link_to new_item_path ,class: 'purchase-btn' do %>
    <span class='purchase-btn-text'>登録</span>
    <%= image_tag 'shirt.png' , size: '185x50' ,class: "purchase-btn-icon" %>
  <% end %>
  <% if current_user.money.present? %>
    <%= link_to moneys_path ,class: 'purchase-btn2' do %>
      <span class='purchase-btn-text'>残高</span>
      <%= image_tag 'wallet.png' , size: '185x50' ,class: "purchase-btn-icon" %>
    <% end %>
  <% else %>
    <%= link_to moneys_path ,class: 'purchase-btn2' do %>
      <span class='purchase-btn-text'>登録</span>
      <%= image_tag 'wallet.png' , size: '185x50' ,class: "purchase-btn-icon" %>
    <% end %>
  <% end %>
</div>